<%- include('../partials/navbar') %>
<%- include('../layouts/main') %>
<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h2><i class="fas fa-car me-2"></i>Mis Vehículos</h2>
    </div>
    <div class="col-md-4 text-end">
      <a href="/vehiculos/registro" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i> Nuevo Vehículo
      </a>
    </div>
  </div>

  <% if (vehiculos && vehiculos.length > 0) { %>
    <div class="row">
      <% vehiculos.forEach(vehiculo => { %>
        <div class="col-md-6 mb-4">
          <div class="card vehicle-card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0"><%= vehiculo.marca %> <%= vehiculo.modelo %></h5>
              <span class="badge bg-primary"><%= vehiculo.tipo %></span>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-8">
                  <p><strong><i class="fas fa-id-card me-2"></i>Placa:</strong> <%= vehiculo.placa %></p>
                  <% if (vehiculo.anio) { %>
                    <p><strong><i class="fas fa-calendar-alt me-2"></i>Año:</strong> <%= vehiculo.anio %></p>
                  <% } %>
                  <% if (vehiculo.color) { %>
                    <p><strong><i class="fas fa-palette me-2"></i>Color:</strong> <%= vehiculo.color %></p>
                  <% } %>
                </div>
                <div class="col-md-4 text-center">
                  <i class="fas fa-car fa-4x text-primary"></i>
                </div>
              </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
              <div>
                <a href="/vehiculos/editar/<%= vehiculo.id %>" class="btn btn-sm btn-outline-primary me-2">
                  <i class="fas fa-edit me-1"></i> Editar
                </a>
                <a href="/vehiculos/eliminar/<%= vehiculo.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('¿Estás seguro de eliminar este vehículo?')">
                  <i class="fas fa-trash me-1"></i> Eliminar
                </a>
              </div>
              <a href="/ordenes/nueva?vehiculoId=<%= vehiculo.id %>" class="btn btn-sm btn-success">
                <i class="fas fa-car-wash me-1"></i> Solicitar Lavado
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info shadow-sm">
      <i class="fas fa-info-circle me-2"></i>
      <p class="mb-0">No tienes vehículos registrados. <a href="/vehiculos/registro" class="alert-link">Registra tu primer vehículo</a>.</p>
    </div>
  <% } %>
</div>


  
  